<h1>News</h1>
 <p><%= link_to "Add News ", new_article_path, class: "btn btn-info" %></p>
<% if @articles.empty? %>
  <b>No News in the site!</b>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Title:</th>
        <th scope="col">Image:</th>
        <th scope="col">Delete:</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= image_tag (article.title_image_url(:thumb)) if article.title_image? %></td>
        <td><%= link_to "Delete", article, method: :delete,
          data: {confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
