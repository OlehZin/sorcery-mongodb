---
swagger: '2.0'
info:
  title: API V1
  version: v1
paths:
  "/api/v1/articles":
    get:
      summary: Index
      tags:
      - Articles
      produces:
      - application/json
      responses:
        '200':
          description:
            description: Return all the available articles
        '401':
          description:
            description: Not Authorized
  "/api/v1/articles/{id}":
    get:
      summary: Show
      tags:
      - Articles
      produces:
      - application/json
      parameters:
      - name: id
        in: path
        type: string
        required: true
      responses:
        '200':
          description:
            description: article found
          schema:
            type: object
            properties:
              id:
                type: string
              title:
                type: string
              body:
                type: string
              published:
                type: boolean
            required:
            - id
            - title
            - body
            - published
        '404':
          description:
            description: article not found
        '401':
          description:
            description: Not Authorized
  "/api/v1/users":
    get:
      summary: Index
      tags:
      - Users
      produces:
      - application/json
      security:
      - JWT: {}
      parameters:
      - name: Authentication
        in: headers
        type: string
      responses:
        '200':
          description:
            description: Return all the available users
        '401':
          description:
            description: Not Authorized
    post:
      summary: Create
      tags:
      - Users
      consumes:
      - application/json
      parameters:
      - name: user
        in: body
        schema:
          type: object
          properties:
            email:
              type: string
            password:
              type: string
          required:
          - email
          - password
      responses:
        '201':
          description:
            description: user created
        '422':
          description:
            description: invalid request
        '401':
          description:
            description: Not Authorized
  "/api/v1/users/{id}":
    get:
      summary: Show
      tags:
      - Users
      produces:
      - application/json
      parameters:
      - name: id
        in: path
        type: string
        required: true
      responses:
        '200':
          description:
            description: Return the selected user
          schema:
            type: object
            properties:
              id:
                type: string
              email:
                type: string
              password:
                type: string
            required:
            - id
            - email
            - password
        '404':
          description:
            description: user not found
        '401':
          description:
            description: Not Authorized
securityDefinitions:
  JWT:
    description: the jwt for API auth
    type: apiKey
    name: Authentication
    in: header
